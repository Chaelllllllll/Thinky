{
  "version": 2,
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs18.x"
    }
  },
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/[...slug].js" },
    { "src": "^/(js|css|images|auth|fonts)/(.*)$", "dest": "/public/$1/$2" },
    { "src": "^/$", "dest": "/public/index.html" },
    { "src": "^/([^\\.]+)$", "dest": "/public/$1.html" },
    { "src": "^/(.*)$", "dest": "/public/$1" }
  ]
}
